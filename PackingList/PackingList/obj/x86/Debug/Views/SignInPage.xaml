<Page
    x:Class="PackingList.Views.SignInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PackingList.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--LayoutRoot is the root grid where all page content is placed-->

    <Grid x:ConnectionId='1' x:Name="LayoutRoot" Background="White">

        <Grid Margin="5,0,0,0">

            <Grid.RowDefinitions>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

            <!--Title-->

            <TextBlock Text="User Registration" Grid.Row="0" FontSize="40"  Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!--UserName-->

            <TextBlock Text="UserName :" Grid.Row="1" Foreground="Black"   Margin="25,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <TextBox x:ConnectionId='2' Name="TxtUserName" BorderBrush="LightGray" Grid.Row="1" Margin="125,0,0,5" Width="256" HorizontalAlignment="Left" />

            <!--Password-->

            <TextBlock Text="Password: " Grid.Row="2" Margin="25,0,0,0" Foreground="Black" VerticalAlignment="Center" />

            <PasswordBox x:ConnectionId='3' Name="TxtPwd" BorderBrush="LightGray" Grid.Row="2" Margin="125,0,0,5" Width="256" HorizontalAlignment="Left" />

            <!--Email-->

            <TextBlock Text="Email Address: " Grid.Row="6" Margin="25,0,0,0" Foreground="Black" VerticalAlignment="Center" />

            <TextBox x:ConnectionId='4' Name="TxtEmail" BorderBrush="LightGray" Grid.Row="6" Margin="125,0,0,5" Width="256" HorizontalAlignment="Left" />

            <!--Submit Button-->

            <Button x:ConnectionId='5' BorderBrush="Transparent"  Background="#FF0F73EC" Content="Submit"  Name="BtnSubmit"                      Grid.Row="7" Margin="8,8,8,8" HorizontalAlignment="Center" FontWeight="Bold"/>

        </Grid>

    </Grid>
</Page>

