    <SplitView x:ConnectionId='1' x:Name="MySplitView" DisplayMode="CompactOverlay"  IsPaneOpen="False" CompactPaneLength="50" OpenPaneLength="150"
               Background="White" PaneBackground="#FF0F73EC">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='3' x:Name="smal1024x768">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="768" MinWindowWidth="{Binding Width, ElementName=addPanel, FallbackValue=300, Mode=TwoWay}"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <SplitView.Pane>
            <StackPanel>
                <Button x:ConnectionId='4' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="50" Height="50" Background="Transparent"                               />
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='6' x:Name="MenuButton1" FontFamily="Segoe MDL2 Assets" Content="&#xE128;"
                    Width="50" Height="50" Background="Transparent"                     />
                    <TextBlock Text="Trips" FontSize="18" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='5' x:Name="MenuButton2" FontFamily="Segoe MDL2 Assets" Content="&#xE113;"
                        Width="50" Height="50" Background="Transparent"                     />
                    <TextBlock Text="Items" FontSize="18" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </SplitView.Pane>
        <Grid x:ConnectionId='7' x:Name="MySplitViewContent">
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/travel-industry.jpg"/>
            </Grid.Background>
            <StackPanel x:ConnectionId='8' x:Name="tripsPanel" HorizontalAlignment="Left" Height="750" Margin="10,25,5,5" VerticalAlignment="Top" Width="410" BorderThickness="2" CornerRadius="4" Background="Azure" BorderBrush="#FF00D0FF"/>
            <StackPanel x:ConnectionId='9' x:Name="itemsPanel" Background="Azure" HorizontalAlignment="Center" Height="750" Margin="0,25,0,5" VerticalAlignment="Top" Width="410" BorderBrush="#FF00D0FF" BorderThickness="2" CornerRadius="4"/>
            <StackPanel x:ConnectionId='10' x:Name="addPanel" Background="Azure" HorizontalAlignment="Right" Height="750" Margin="5,25,10,5" VerticalAlignment="Top" Width="410" BorderBrush="#FF00D0FF" BorderThickness="2" CornerRadius="4"/>
        </Grid>
    </SplitView>

